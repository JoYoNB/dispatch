<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:mvc="http://www.springframework.org/schema/mvc"
    xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-4.0.xsd 
    http://www.springframework.org/schema/mvc
    http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
	http://www.springframework.org/schema/util
	http://www.springframework.org/schema/util/spring-util-4.0.xsd">
    
    <bean id="authManager" class="com.chainway.dispatcherweb.security.AuthManager">
		<property name="urlPatterns">
			<value>
		        /common/login.json;=anon
		        /common/logout.json;=anon
		        /common/unauthorized.json;=anon
		        /common/captcha.json;=anon
		        /test/test.json;=role[admin111|opt]
		        /test/uploadFile.json;=anon
		        /user/addDept.json;=permission[addDept]
		        /user/deleteDept.json;=permission[deleteDept]
		        /user/deleteDeptList.json;=permission[deleteDept]
		        /user/updateDept.json;=permission[updateDept]
		        /user/getDept.json;=permission[deptManagement|addDept|updateDept|deleteDept]
		        /user/getDeptList.json;=user
		        /user/getUserRoleAuthTree.json;=user
		        /user/getRoleList.json;=user
		        /user/getRole.json;=permission[roleManagement|addRole|updateRole|deleteRole]
		        /user/addRole.json;=permission[addRole]
		        /user/updateRole.json;=permission[updateRole]
		        /user/deleteRole.json;=permission[deleteRole]
				/chargeRule/list.json;=permission[chargeRuleManagement|addChargeRule|deleteChargeRule|updateChargeRule]
				/chargeRule/add.json;=permission[addChargeRule]
				/chargeRule/delete.json;=permission[deleteChargeRule]
				/chargeRule/update.json;=permission[updateChargeRule]
				/chargeRule/info.json;=permission[chargeRuleManagement|updateChargeRule]
				/settleOrder/list.json;=permission[settleOrder|settle]
				/settleOrder/info.json;=permission[settleOrder|settle|settleOrderInfo]
				/settleOrder/settle.json;=permission[settle]
				/customer/list.json;=permission[customerManagement|addCustomer|deleteCustomer|updateCustomer]
				/customer/add.json;=permission[addCustomer]
				/customer/delete.json;=permission[deleteCustomer]
				/customer/update.json;=permission[updateCustomer]
				/customer/info.json;=permission[customerManagement|updateCustomer]
				/consignor/mainpage/orderStatistics.json;=permission[orderManagerment]
				/consignor/mainpage/cargoStatistics.json;=permission[orderManagerment]
				/consignor/mainpage/orderRank.json;=permission[orderManagerment]
				/consignor/mainpage/deliveryCargoRank.json;=permission[orderManagerment]
				/consignor/mainpage/totalStatistics.json;=permission[orderManagerment]
				/consignor/dispatchingMonitor/orderList.json;=permission[orderManagerment]
				/consignor/dispatchingMonitor/orderDetail.json;=permission[orderManagerment]
				/consignor/order/create.json;=permission[addOrder]
				/consignor/order/orderDetail.json;=permission[orderManagerment]
				/consignor/order/orderList.json;=permission[orderManagerment|deleteOrder|releaseOrder|exportOrder|updateOrder]
				/consignor/order/update.json;=permission[updateOrder]
				/consignor/order/delete.json;=permission[deleteOrder]
				/consignor/order/export.json;=permission[exportOrder]
				/consignor/order/charge.json;=permission[releaseOrder]
				/consignor/order/payResult.json;=permission[releaseOrder]
				/consignor/order/chargeNotice.json;=anon
				/consignor/site/create.json;=permission[addSite]
				/consignor/site/queryList.json;=permission[siteManagement|updateSite|deleteSite]
				/consignor/site/update.json;=permission[updateSite]
				/consignor/site/getLink.json;=permission[addSite|updateSite]
				/consignor/site/delete.json;=permission[deleteSite]	
				/vehicle/getVehicle.json;=permission[driverManagement|addDriver|updateDriver|deleteDriver]
				/vehicle/getVehicleList.json;=permission[driverManagement|addDriver|updateDriver|deleteDriver]
				/vehicle/addVehicle.json;=permission[addDriver]
				/vehicle/updateVehicle.json;=permission[updateDriver]
				/vehicle/deleteVehicle.json;=permission[deleteDriver]
				/vehicle/deleteVehicleList.json;=permission[deleteDriver]
				/driver/getDriver.json;=permission[vehicleManagement|addVehicle|updateVehicle|deleteVehicle]
				/driver/getDriverList.json;=permission[vehicleManagement|addVehicle|updateVehicle|deleteVehicle]
				/driver/addDriver.json;=permission[addVehicle]
				/driver/updateDriver.json;=permission[updateVehicle]
				/driver/deleteDriver.json;=permission[deleteVehicle]
				/driver/deleteDriverList.json;=permission[deleteVehicle]
		        /**;=user
			</value>
		</property>
	</bean>
	
</beans>